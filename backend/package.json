{
  "name": "template",
  "private": true,
  "scripts": {
    "local": "nodemon",
    "start": "NODE_ENV=local ts-node ./index.ts",
    "dev": "pnpm run build && NODE_ENV=development node ./dist/index.js",
    "development": "NODE_ENV=development && nodemon --exec ts-node index.ts",
    "prod": "pnpm run build && NODE_ENV=production node ./dist/index.js",
    "build": "npx tsc",
    "lint": "eslint . --ext .ts,.js --max-warnings=0",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "format": "prettier . -w",
    "format:check": "prettier . --check",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint . --ext .ts,.js --max-warnings=0",
      "prettier . -w"
    ],
    "**/*.{json,css,scss,md,webmanifest}": [
      "prettier . -w"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.4",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "*"
  },
  "dependencies": {
    "apollo-server-express": "^3.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "graphql": "^16.10.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-upload": "^17.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20"
  }
}
